{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "Base Charmed Icons",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Storm",
    "dark": "One Dark"
  },
  "terminal": {
    "font_family": "Cascadia Code PL"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": false,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "show_inline_completions": false
    }
  }
}
